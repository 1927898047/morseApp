<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".pages.ShortCoder">


    <RadioGroup
        android:id="@+id/pcmRadioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_to_morse_button">
        <RadioButton
            android:id="@+id/wpmButton_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F4606C"
            android:text="35wpm"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/wpmButton_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F4606C"
            android:text="40wpm"
            android:textColor="@color/design_default_color_primary_dark"

            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/wpmButton_45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F4606C"
            android:text="45wpm"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/wpmButton_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F4606C"
            android:text="50wpm"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/pcmRadioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:checkedButton="@id/wpmButton_15"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcmRadioGroup2">

        <RadioButton
            android:id="@+id/wpmButton_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F4606C"
            android:text="15wpm"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/wpmButton_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F4606C"
            android:text="20wpm"
            android:textColor="@color/design_default_color_primary_dark"

            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/wpmButton_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F4606C"
            android:text="25wpm"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/wpmButton_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F4606C"
            android:text="30wpm"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="16sp" />
    </RadioGroup>


    <TextView
        android:id="@+id/output"
        android:layout_width="330dp"
        android:layout_height="104dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/translucent"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:longClickable="true"
        android:text=""
        android:textIsSelectable="true"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/switch_to_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="点击切换\n到录音"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/switch_to_shortCode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="长码编码\n(点击切换)"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@+id/switch_to_socket"
        app:layout_constraintStart_toEndOf="@+id/switch_to_record"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/switch_to_socket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="点击切换\n到Socket通信"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/audio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="55dp"
        android:text="3.编码并播放音频"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcmRadioGroup1" />

    <EditText
        android:id="@+id/input_text"
        android:layout_width="323dp"
        android:layout_height="68dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/translucent"
        android:ems="10"
        android:gravity="center"
        android:hint="1.请输入英文字符"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/output"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:id="@+id/char_to_morse_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="2.字符转摩尔斯码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_text" />


</androidx.constraintlayout.widget.ConstraintLayout>