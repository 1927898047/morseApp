<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pages.Sockets">


    <TextView
        android:id="@+id/serverReturn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/translucent"
        android:enabled="true"
        android:focusable="true"

        android:gravity="center"
        android:longClickable="true"
        android:text="IP地址："
        android:textIsSelectable="true"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_settings"
        app:layout_constraintEnd_toStartOf="@+id/et_ip"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/serverReturn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/translucent"
        android:enabled="true"
        android:focusable="true"

        android:gravity="center"
        android:longClickable="true"
        android:text="端口号："
        android:textIsSelectable="true"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/et_ip"
        app:layout_constraintEnd_toStartOf="@+id/et_port"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/et_port"
        android:layout_width="218dp"
        android:layout_height="43dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/translucent"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:longClickable="true"
        android:text=""
        android:textIsSelectable="true"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/et_ip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/bt_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:text="更改IP设置"
        app:layout_constraintBottom_toTopOf="@+id/serverReturn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_ip"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/translucent"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:hint=""
        android:longClickable="true"
        android:text=""
        android:textIsSelectable="true"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/send_wav_toServer_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:text="向服务器发送wav文件"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/serverReturn"
        android:layout_width="324dp"
        android:layout_height="144dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/translucent"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:hint="服务器返回内容"
        android:longClickable="true"
        android:text=""
        android:textIsSelectable="true"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/send_wav_toServer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>